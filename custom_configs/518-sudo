PKG="sudo"
PKG_VERSION="1.8.23"
PKG_FILE="sudo-${PKG_VERSION}.tar.gz"
URL="http://www.sudo.ws/dist/sudo-${PKG_VERSION}.tar.gz"
MD5="ea444d747feb1decfebdffd0b38b0739"
for i in PATCH{1..10}; do
   unset $i
done
PATCH1=""

( cat << "xEOFx"
   ./configure --prefix=/usr              \
               --libexecdir=/usr/lib      \
               --with-secure-path         \
               --with-all-insults         \
               --with-env-editor          \
               --docdir=/usr/share/doc/sudo-${PKG_VERSION} \
               --with-passprompt="[sudo] password for %p" &&
   make
   #env LC_ALL=C make -k check 2>&1 | tee ../make-check.log || true
   #make -k  || true
   make -j1 install &&
   ln -sfv libsudo_util.so.0.0.0 /usr/lib/sudo/libsudo_util.so.0

xEOFx
) > tmp
